#!/bin/sh
/bin/mount -t proc none /proc
/bin/mount -t usbfs none /proc/bus/usb

/bin/mount -t ramfs none /tmp
/bin/mount -t ramfs none /swap
/bin/mount -t ramfs none /var/run

/bin/ifconfig lo 127.0.0.1
/bin/route add -net 127.0.0.0 netmask 255.255.255.0 lo

/bin/ifconfig eth0 up


/bin/cat /etc/motd

/bin/sh

